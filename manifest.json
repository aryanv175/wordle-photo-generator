{
    "manifest_version": 3,
    "name": "Wordle Photo Generator",
    "version": "1.0",
    "description": "This extension aims to make shareable photo for your wordle results. No longer do you have to place each emoji everyday, simply click the extension and get the shareable photo generated.",
    "permissions": ["activeTab", "scripting"],
    "content_security_policy": "script-src 'self' 'sha256-G2c5soPqfBb3ifYJA6TG7PaGcblSHRON2g79gBQ6gXc='",
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "icon.png",
            "48": "icon.png",
            "128": "icon.png"
        }
    },
    
    "content_scripts": [
        {
            "matches": ["https://www.nytimes.com/games/wordle/index.html"],
            "js": ["photo-generator.js"] 
        }
    ]
}

  